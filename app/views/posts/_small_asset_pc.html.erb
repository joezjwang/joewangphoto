<section class="post-small-asset">
  <%= link_to post_path(post) do %>
    <header class="post-small-asset-header">
      <% if post.long_title? %>
        <h1 class="post-small-asset-title" style="font-size: 17px;">
      <% else %>
        <h1 class="post-small-asset-title">
      <% end %>
      <%= post.title %>
      </h1>
      <div class="post-small-asset-meta post-small-asset-meta-published-date"><%= post.published_at.to_formatted_s(:post_date) %>
      </div>
      <div class="post-small-asset-meta post-small-asset-meta-reading-time"><%= post.reading_time %> min read
      </div>
    </header>
    <div class="post-small-asset-image">
    <% if post.cover_blogimage_id.present? %>
    <%= image_tag(Blogimage.find(post.cover_blogimage_id).image.url(:mobile_large), alt: post.title) %>
    <% end %>
    </div>
  <% end %>
</section>