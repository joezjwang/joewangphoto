<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-20-24">
    <p id="notice"><%= notice %></p>

    <h1>Listing Blog Images</h1>

    <%= link_to 'New Post', admin_posts_path , class: "pure-button" %>

    <br><br>

    <table class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>Id</th>
          <th style="max-width:100px;">Title</th>
          <th style="max-width:400px;">Caption</th>
          <th>Preview</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @blogimages.each do |image| %>
          <tr>
            <td><%= image.id %></td>
            <td style="max-width:100px;"><%= image.title %></td>
            <td style="max-width:400px;"><%= image.caption %></td>
            <td>
              <%= image_tag image.image.url(:pc_small), :width => '100'%>
              <%= image_tag image.image.url(:pc_small), :width => '160'%>
            </td>
            <td><%#= link_to 'Show', admin_photograph_path(photograph), class: "pure-button" %></td>
            <td><%#= link_to 'Edit', edit_admin_photograph_path(photograph), class: "pure-button" %></td>
            <td><%#= link_to 'Destroy', admin_photograph_path(photograph), method: :delete, data: { confirm: 'Are you sure?' }, class: "pure-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
  <div class="pure-u-2-24"></div>
</div>