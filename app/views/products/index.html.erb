<style type="text/css">
	.products-content {
		padding-top: 27px;
		text-align: center;
    margin: 0 auto;
	}
	.product {
		padding: 0px 0px 30px 10px;
		min-height: 400px;
		float: none;
		display: inline-block;
	}
	.product-left-section-container {
		float: left;
		height: 400px;
		width: 300px;
		position: relative;
	}
	.shopify-iframe {
		width: 100%;
		height:140px;
		padding: 5px;
		background-color: #f0f0f0;
	}
	.product-info-container {
		padding: 15px;
		width:100%;
		height:260px;
		background-color: #f0f0f0;
	}
	.product-name {
		font-size: 20px;
		padding: 20px 10px 20px 10px;
		text-transform: uppercase;
	}
	.product-description {
		padding: 15px 20px;
		width:100%;
		background-color: #f0f0f0;
		text-align: left;
	}
	.product-photo {
		float:left;
	}
	.shop-message {
    padding: 0.4em 1em;
    margin: 6px 20px;
    color: #333;
    font-size: 18px;
    background: #eee;
    float: right;
    display: inline-block;
    text-align: center;
    clear: both;
  }
</style>

<script type="text/javascript">
document.getElementById('ShopifyEmbedScript') || document.write('<script type="text/javascript" src="https://widgets.shopifyapps.com/assets/widgets/embed/client.js" id="ShopifyEmbedScript"><\/script>');
</script>

<div id="page-content">
  <div class="products-content">
	  <% @products.each_with_index do |product, index| %>
	  	<div class="product">
		  	<div class="product-left-section-container">
		  	<div class="product-info-container">
		  		<div class="product-name">
		  			<%= product.name %>
		  		</div>
		  		<div class="product-description">
						<%= product.description %>
					</div>
				</div>
					<div class="shopify-iframe" data-embed_type="product" data-shop="joewangphoto.myshopify.com" data-product_name="<%= product.name %>" data-product_handle="<%= product.shopify_product_handle %>" data-has_image="false" data-show_product_price="true" data-display_size="regular" data-redirect_to="cart" data-buy_button_text="Add to Cart" data-buy_button_out_of_stock_text="Out of Stock" data-buy_button_product_unavailable_text="Unavailable" data-button_background_color="7db461" data-button_text_color="ffffff" data-background_color="f0f0f0" data-product_modal="false" data-product_title_color="000000" data-next_page_button_text="Next page"></div>
					<noscript><a href="https://joewangphoto.myshopify.com/cart/<%= product.shopify_product_id %>:1" target="_blank">Buy <%= product.name %></a></noscript>

				</div>
				<div class="product-photo">
		  		<img src="http://placehold.it/600x400">
		  	</div>
			</div>
	  <% end %>
  </div>
	<br>
	<div class="shop-message">
	All Prices in Canadian Dollars ($CAD). Zero taxes on all orders.
	</div><br>
	<div class="shop-message">
	Printed in Canada	&#x1f341; We ship worldwide including the International Space Station.
	</div>
</div>

<div data-checkout_button_text="Checkout" data-cart_button_text="Cart" data-button_text_color="ffffff" data-button_background_color="7fb466" data-background_color="ffffff" data-text_color="000000" data-accent_color="767676" data-cart_title="Hot off the press" data-discount_notice_text="Shipping and discount codes are added at checkout." data-cart_total_text="Total" data-sticky="true" data-empty_cart_text="Your cart is empty." data-embed_type="cart" data-shop="joewangphoto.myshopify.com"></div>
<script type="text/javascript">
document.getElementById('ShopifyEmbedScript') || document.write('<script type="text/javascript" src="https://widgets.shopifyapps.com/assets/widgets/embed/client.js" id="ShopifyEmbedScript"><\/script>');
</script>