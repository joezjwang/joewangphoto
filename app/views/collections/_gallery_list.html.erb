<% if mobile_device? %>
  <% @collections.each_with_index do |collection, index| %>
    <%= render "gallery_asset", collection: collection, index: index, size: "mobile_large" %>
  <% end %>
<% else %>
  <% @collections.each_with_index do |collection, index| %>
    <%= render "gallery_asset", collection: collection, index: index, size: "pc_small"  %>
  <% end %>
<% end %>