<% title @collection.name %>
<% description @collection.description %>
<% 
unless @collection.cover_photograph_id.nil?
	og_image_url request.base_url + Photograph.find(@collection.cover_photograph_id).photo.url(:mobile_large)
end 
%>
<% og_page_url request.original_url %>

<style type="text/css">
	
body {
	text-align: center;
}

</style>
<div id="page-content">
		<p id="notice"><%= notice %></p>
		<div id="set-intro">
		<h1></h1>
		<p>
		<%= @collection.description  %>
		</p>
	</div>
<div class="collection-group">
		<% @photographs.each_with_index do |photograph, index| %>
			<div class="collection-photo" id="<%= "photo-#{index}" %>" >
				<% if mobile_device? %>
					<%= image_tag(photograph.photo.url(:mobile_large), alt: photograph.title) %>
				<% else %>
					<%= image_tag(photograph.photo.url(:pc_large), alt: photograph.title) %>
				<div class="photo-text-container">
					<div class="photo-title"><%= photograph.title %></div>
					<div class="photo-location"><%= photograph.location %></div>
				</div>
				<% end %>
		</div><br>
		<% end %>
		<div class="collection_show_footer">
		<%= link_to '^ Top', "#page-top", class: 'pure-button' %>
		</div>
	</div>
	</div>
</div>


