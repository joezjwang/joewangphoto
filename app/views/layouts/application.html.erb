<!DOCTYPE html>
<html>
<head>
  <title>Joewangphotography</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>

  <!-- custom head content -->
  <meta name="viewport" content="initial-scale=1,maximum-scale=1,user-scalable=yes">

  <% if params[:controller].include?('admin') %>
    <!--[if lte IE 8]>
      <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-old-ie-min.css">
  	<![endif]-->
  	<!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
  	<!--<![endif]-->
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
  <% else %>
    <script src="/js/lagacy.js"></script>
  <% end %>


  <!-- end -->
  <%= csrf_meta_tags %>
</head>
<body>
<% unless params[:controller].include?('admin') %>

<header id="nav-section">
    <span id="page-top"></span>
    <div class="logo">
    <h1><a href="http://www.joewangphoto.com" title="Joe Wang Photography">
    <img src="/images/joe-wang-photography-logo.png" alt="logo">
    </a></h1>
    </div>
    <div id="menu-section">
      <div class="toggle">
        <a href="#open">MENU&nbsp;&nbsp;&#9776;</a>
      </div>
        <ul id="menu" class="group">
          <li class="extraspace captital-on-mobile"><a href="/" >Home</a></li>
          <% @collections= Collection.where({published: true}) %>
          <% @collections.each do |collection| %>
            <li>
            <%= link_to collection.name, collection_path(collection) %>
            </li>
          <% end %>
          <li class="extraspace captital-on-mobile"><%= link_to "About", page_path("about") %>
        </ul>
    </div>
    <div class="keyboard-instructions">
        Press "L" to turn OFF lights
    </div>
    <div class="social-icons">
        <a href="http://instagram.com/_u/joewangphoto"><img src="/images/instagram-icon-AAA-24.png"></a>
        <a href="http://www.500px.com/zjwang"><img src="/images/500px-icon-AAA-24.png"></a>
    </div>
    <div class="copyright">
        &copy; Joe Wang 2014-2015
    </div>
</header>
<div id="lightbox">
</div>
<% end %>

<%= yield %>

</body>
</html>
