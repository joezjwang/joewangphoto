<%= form_for @product_collection, :html => {class: 'pure-form' } do |f| %>
  <% if @product_collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_collection.errors.count, "error") %> prohibited this product collection from being saved:</h2>

      <ul>
      <% @product_collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'pure-input-2-3' %>
  </div>
  <div class="field">
    <%= f.label :shopify_collection_handle %><br>
    <%= f.text_field :shopify_collection_handle, class: 'pure-input-2-3' %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'pure-input-2-3' %>
  </div>
    <% prominence_array=(1..(ProductCollection.count()+1)).to_a %>
  <div class="field">
    <%= f.label :prominence %><br>
    <%= f.select(:prominence, prominence_array, {selected: @product_collection.prominence, include_blank: true})%>
  </div><br>
  <div class="field">
    <%= f.check_box :published %>
    <%= f.label :published %>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit class: 'pure-button pure-button-primary' %>
  </div><br><br>
<% end %>

