<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-20-24">
    <p id="notice"><%= notice %></p>

    <h1>Listing Blog Images</h1>

    <%= link_to 'Posts', admin_posts_path , class: "pure-button" %>

    <br><br>

    <%= form_for Blogimage.new do |f| %>
      <%= f.label :image, "Upload paintings:" %>
      <%= f.file_field :image, multiple: true, name: "blogimage[image]" %>
    <% end %>
    <br>

    <table id="blogimages" class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>Image</th>
          <th style="max-width:100px;">Title</th>
          <th style="max-width:400px;">Description</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <%= render @blogimages %>
    </table>
    <div class="clear"></div>

    <script id="template-upload" type="text/x-tmpl">
    <div class="upload">
      {%=o.name%}
      <div class="progress"><div class="bar" style="width: 0%"></div></div>
    </div>
    </script>


    <br>

  </div>
  <div class="pure-u-2-24"></div>
</div>