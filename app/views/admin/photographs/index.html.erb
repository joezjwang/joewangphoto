<p id="notice"><%= notice %></p>

<h1>Listing Photographs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Collection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photographs.each do |photograph| %>
      <tr>
        <td><%= photograph.title %></td>
        <td><%= photograph.description %></td>
        <td>
        <% unless photograph.collections.empty? %>
          <ul>
            <% photograph.collections.each do |collection| %>
            <li><%= collection.name %></li>
            <% end %>
          <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', admin_photograph_path(photograph) %></td>
        <td><%= link_to 'Edit', edit_admin_photograph_path(photograph) %></td>
        <td><%= link_to 'Destroy', admin_photograph_path(photograph), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

