<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-20-24">
    <p id="notice"><%= notice %></p>

    <h1>Listing Photographs</h1>


    <%= link_to 'New Photograph', new_admin_photograph_path , class: "pure-button pure-button-primary" %>
    <%= link_to 'New Collection', new_admin_collection_path , class: "pure-button pure-button-primary" %>

    <br><br>

    <table class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Collection</th>
          <th>Preview</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @photographs.each do |photograph| %>
          <tr>
            <td><%= photograph.title %></td>
            <td><%= photograph.description %></td>
            <td>
            <% unless photograph.collections.empty? %>
              <ul>
                <% photograph.collections.each do |collection| %>
                <li><%= collection.name %></li>
                <% end %>
              <% end %>
              </ul>
            </td>
            <td>
              <%= image_tag photograph.photo.url(:thumb), :height => '50'%>
            </td>
            <td><%= link_to 'Show', admin_photograph_path(photograph), class: "pure-button" %></td>
            <td><%= link_to 'Edit', edit_admin_photograph_path(photograph), class: "pure-button" %></td>
            <td><%= link_to 'Destroy', admin_photograph_path(photograph), method: :delete, data: { confirm: 'Are you sure?' }, class: "pure-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
  <div class="pure-u-2-24"></div>
</div>