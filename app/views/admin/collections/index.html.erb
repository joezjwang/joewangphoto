<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-20-24">
    <p id="notice"><%= notice %></p>

    <h1>Listing Collections</h1>

    <%= link_to 'New Collection', new_admin_collection_path , class: "pure-button pure-button-primary" %>

    <br><br>
    <table class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Collection Size</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @collections.each do |collection| %>
          <tr>
            <td><%= collection.name %></td>
            <td><%= collection.description %></td>
            <td><%= collection.photographs.count %></td>
            <td><%= link_to 'Show', admin_collection_path(collection), class: "pure-button" %></td>
            <td><%= link_to 'Edit', edit_admin_collection_path(collection), class: "pure-button" %></td>
            <td><%= link_to 'Destroy', admin_collection_path(collection), method: :delete, data: { confirm: 'Are you sure?' }, class: "pure-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
  <div class="pure-u-2-24"></div>
</div>
