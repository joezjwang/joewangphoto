<div class="pure-g">
  <div class="pure-u-1-3">
    <%= link_to 'Back', admin_posts_path, class: 'pure-button' %>
      <br><br>
    <%= form_for Blogimage.new do |f| %>
      <%= f.label :image, "Add Images:" %>
      <%= f.file_field :image, multiple: true, name: "blogimage[image]" %>
    <% end %>
    <script id="template-upload" type="text/x-tmpl">
      <div class="upload">
        {%=o.name%}
        <div class="progress"><div class="bar" style="width: 0%"></div></div>
      </div>
    </script>
    <br>
    <div id="blogimages">
      <%= render @blogimages %>
    </div>
    <div class="clear"></div>
  </div>

  <div class="pure-u-2-3">

    <%= form_for @post, :html => {:class => 'pure-form', multipart: true} do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit class: 'pure-button' %>
      </div>
      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'pure-input-2-3', rows: 2 %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: 'pure-input-2-3', rows: 20, width: '100%' %>
      </div> 
      <div class="pure-g">
        <div class="pure-u-1-4">
          <div class="field">
            <%= f.label :photo_taken_at %>
            <%= f.date_field :taken_at, class: 'pure-input-2-3' %>
          </div>
        </div>
        <div class="pure-u-1-4">
          <div class="field">
            <%= f.label :cover_blogimage_id %>
            <%= f.number_field :cover_blogimage_id, class: 'pure-input-2-3' %>
          </div>
        </div>
        <div class="pure-u-1-4">
          <div class="field">
            <%= f.label :published %>
            <%= f.check_box :published %>
          </div> 
        </div>
      </div>
    <% end %>
  </div>
</div>
