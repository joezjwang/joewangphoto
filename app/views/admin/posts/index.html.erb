<div class="pure-g">
  <div class="pure-u-2-24"></div>
  <div class="pure-u-20-24">
    <p id="notice"><%= notice %></p>

    <h1>Listing Posts</h1>


    <%= link_to 'New Post', new_admin_post_path , class: "pure-button pure-button-primary" %>

    <br><br>

    <table class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>Id</th>
          <th style="max-width:200px;">Title</th>
          <th style="max-width:600px;">Body</th>
          <th>Word Count</th>
          <th>Photo Count</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td style="max-width:200px;"><%= post.title %></td>
            <td style="max-width:600px;"><%= post.body_preview_admin %></td>
            <td><%= post.word_count %></td>
            <td>0</td>
            <td><%= link_to 'Show', admin_post_path(post), class: "pure-button" %></td>
            <td><%= link_to 'Edit', edit_admin_post_path(post), class: "pure-button" %></td>
            <td><%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "pure-button" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
  <div class="pure-u-2-24"></div>
</div>
