<div class="pure-g">
  <div class="pure-u-4-24"></div>
  <div class="pure-u-4-24">
  	<p id="notice"><%= notice %></p>

		<%= link_to 'Edit', edit_admin_post_path(@post), class: 'pure-button' %>
		<%= link_to 'Back', admin_posts_path, class: 'pure-button' %>
		<%= link_to 'Live', post_path(@post), class: 'pure-button' %>
  	<h3>Published?</h3>
	  <p>
		  <%= @post.published %>
		</p>
		<h3>Published Time</h3>
	  <p>
	  		<% if @post.published_at.present? %>
		  <%= @post.published_at.to_formatted_s(:long) %>
		  <% end %>
		</p>
		<h3>Date Taken</h3>
	  <p>
	  <% if @post.taken_at.present? %>
		  <%= @post.taken_at.to_formatted_s(:long) %>
		  <% end %>
		</p>
		<h3>Word Count</h3>
		<p>
		  <%= @post.body_word_count %>
		</p>
		<h3>Reading Time</h3>
	  <p>
		  <%= @post.reading_time %>
		</p>
		<h3>Cover Image</h3>
	  <p>
		  
		</p>

  </div>
  <div class="pure-u-14-24" style="max-width:600px;">
		<br><br>
		<p>
		  <h1><%= @post.title %></h1>
		</p>

	  <p>
		  <%= markdown(@post.body) %>
		</p>
	  <p>
		  <%= @post.body %>
		</p>
	</div>
  <div class="pure-u-2-24"></div>
</div>

